---
import MetaTagsPrimary from "./MetaTagsPrimary.astro";
import MetaTagsOpenGraph from "./MetaTagsOpenGraph.astro";
import MetaTagsTwitter from "./MetaTagsTwitter.astro";

type Props = {
  title: string;
  description: string;
  url: string;
  image: string;
};

const { title, description, url, image } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<link rel="sitemap" href="/sitemap-index.xml" />

<MetaTagsPrimary title={title} description={description} />
<MetaTagsOpenGraph title={title} description={description} url={url} image={image} />
<MetaTagsTwitter title={title} description={description} url={url} image={image} />
